<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home"/>
    <MudNavLink Href="/Counter" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Calculate"/>
    <MudNavLink Href="/Weather" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.CloudSync"/>
    <MudNavLink Href="/Organization/Structure" Match="NavLinkMatch.Prefix" Icon="@Icons.Custom.Brands.Awesome"/>
    <MudMenu TransformOrigin="Origin.TopLeft" AnchorOrigin="Origin.TopRight" Icon="@Icons.Material.Filled.BusinessCenter" Color="Color.Primary" AriaLabel="Menu Organization">
        <MudStack DividerType="DividerType.Middle" Color="Color.Info"> 
                <MudBreadcrumbs Items="_crumbOrganization"></MudBreadcrumbs>
        </MudStack>
        <MudMenuItem Href="/Organization/Structure">Organization Structure</MudMenuItem>
        <MudMenuItem Href="/Organization/Announcement">Announcement</MudMenuItem>
        <MudMenuItem Href="/Organization/Company">Company</MudMenuItem>
        <MudMenuItem Href="/Organization/CompanyPolicy">Company Policy</MudMenuItem>
    </MudMenu>
        <MudMenu TransformOrigin="Origin.TopLeft" AnchorOrigin="Origin.TopRight" Icon="@Icons.Material.Filled.PeopleOutline" Color="Color.Primary" AriaLabel="Menu Employee">
         <MudStack DividerType="DividerType.Middle" Color="Color.Info"> 
                <MudBreadcrumbs Items="_crumbEmployee"></MudBreadcrumbs>
        </MudStack>
        <MudMenuItem Href="/Employee/Employee" Icon="@Icons.Material.Filled.People">Employee</MudMenuItem>
        <MudMenuItem Href="/Employee/Rewards" Icon="@Icons.Material.Sharp.CardGiftcard">Rewards</MudMenuItem>
        <MudMenuItem Href="/Employee/Inventories" Icon="@Icons.Material.Sharp.Inventory">Inventories</MudMenuItem>
        <MudMenuItem Href="/Employee/Punishment" Icon="@Icons.Material.Rounded.PunchClock">Punishment</MudMenuItem>
    </MudMenu>
</MudNavMenu>

@code {
    private bool _drawerOpen = false;

    private void OpenMenu()
    {
        _drawerOpen = true;
    }

    private List<BreadcrumbItem> _crumbOrganization = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "#", icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("Organization", href: "#", icon: Icons.Material.Filled.BuildCircle),
    };

    private List<BreadcrumbItem> _crumbEmployee = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "#", icon: Icons.Material.Filled.Home),
        new BreadcrumbItem("Employee", href: "#", icon: Icons.Material.Filled.PeopleOutline),
    };
}